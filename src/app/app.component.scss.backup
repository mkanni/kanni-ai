.container {
  min-height: 100vh;
  width: 100%;
  position: relative;
  background: linear-gradient(135deg, #0f1419 0%, #1a2332 50%, #0f1419 100%);
  display: flex;
  flex-direction: column;
  padding: 0;
  overflow: hidden;

  &::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at 30% 50%, rgba(102, 126, 234, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 70% 50%, rgba(118, 75, 162, 0.08) 0%, transparent 50%);
    animation: gradientShift 15s ease infinite;
  }

  &::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 300px;
    background: linear-gradient(to top, rgba(102, 126, 234, 0.1), transparent);
    pointer-events: none;
  }
}

@keyframes gradientShift {
  0%, 100% { transform: translate(0, 0) scale(1); }
  50% { transform: translate(-10%, -10%) scale(1.1); }
}

.overlay {
  display: none;
}

.network-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
}

.header {
  position: relative;
  z-index: 10;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24px 60px;
  backdrop-filter: blur(10px);
  background: rgba(15, 20, 25, 0.6);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);

  .logo-section {
    display: flex;
    flex-direction: column;
    gap: 2px;
    cursor: pointer;
    transition: all 0.3s ease;

    &:hover {
      transform: translateY(-1px);
      
      .logo {
        filter: brightness(1.1);
      }
      
      .tagline {
        color: rgba(255, 255, 255, 0.7);
      }
    }

    .logo {
      font-family: 'Poppins', sans-serif;
      font-size: 1.8rem;
      font-weight: 700;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: -0.5px;
      line-height: 1;
      transition: filter 0.3s ease;
    }

    .tagline {
      font-family: 'Roboto', sans-serif;
      font-size: 0.75rem;
      color: rgba(255, 255, 255, 0.5);
      font-weight: 300;
      letter-spacing: 1px;
      text-transform: uppercase;
      margin-left: 2px;
      transition: color 0.3s ease;
    }
  }

  .nav-menu {
    display: flex;
    gap: 40px;
    align-items: center;
    
    &.desktop-nav {
      display: flex; // Ensure desktop nav is visible by default
    }

    .nav-item {
      font-family: 'Poppins', sans-serif;
      font-size: 0.95rem;
      color: rgba(255, 255, 255, 0.7);
      text-decoration: none;
      font-weight: 400;
      transition: all 0.3s ease;
      position: relative;
      padding: 8px 0;

      &::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        transition: width 0.3s ease;
      }

      &:hover {
        color: rgba(255, 255, 255, 1);

        &::after {
          width: 100%;
        }
      }

      &.active {
        color: rgba(255, 255, 255, 1);
        
        &::after {
          width: 100%;
        }
      }
    }

    .user-menu {
      .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s ease;

        &:hover {
          transform: scale(1.05);
          border-color: rgba(255, 255, 255, 0.3);
          box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }
      }
    }
  }
}

::ng-deep .mat-mdc-menu-panel,
::ng-deep .mat-menu-panel {
  background: rgba(30, 35, 60, 0.95) !important;
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  backdrop-filter: blur(10px);
  min-width: 220px !important;
  margin-top: 8px;

  .user-info {
    padding: 16px;
    background: transparent;

    .user-name {
      color: white !important;
      font-weight: 500;
      font-size: 0.95rem;
      margin-bottom: 4px;
      line-height: 1.4;
    }

    .user-email {
      color: rgba(255, 255, 255, 0.6) !important;
      font-size: 0.8rem;
      line-height: 1.4;
      word-break: break-word;
    }
  }

  .mat-mdc-menu-item,
  .mat-menu-item {
    color: rgba(255, 255, 255, 0.8) !important;
    font-family: 'Poppins', sans-serif;
    
    &:hover {
      background: rgba(102, 126, 234, 0.2) !important;
      color: white !important;
    }
  }

  .mat-mdc-divider,
  .mat-divider {
    border-top-color: rgba(255, 255, 255, 0.1) !important;
    margin: 8px 0;
  }
}

.content {
  position: relative;
  z-index: 2;
  width: 100%;
  max-width: 900px;
  height: calc(100vh - 80px);
  display: grid;
  grid-template-rows: auto 1fr auto;
  grid-template-areas: 
    "typewriter"
    "tip"
    "button";
  gap: 20px;
  padding: 20px;
  margin: 0 auto;
  overflow: hidden;
}

.typewriter-section {
  grid-area: typewriter;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px 0;
}

.typewriter {
  font-family: 'Poppins', sans-serif;
  font-size: clamp(1.5rem, 4vw, 2.5rem);
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 0 40px rgba(102, 126, 234, 0.5);
  letter-spacing: -0.5px;
  line-height: 1.2;
  margin: 0;
}

.cursor {
  animation: blink 1s infinite;
  font-weight: 400;
}

@keyframes blink {
  0%, 49% { opacity: 1; }
  50%, 100% { opacity: 0; }
}

.tip-section {
  grid-area: tip;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow-y: auto;
  padding: 10px 0;
}

.tip-card {
  background: rgba(255, 255, 255, 0.03) !important;
  backdrop-filter: blur(20px);
  border-radius: 12px !important;
  box-shadow: 0 4px 24px rgba(0, 0, 0, 0.4) !important;
  padding: 30px;
  border: 1px solid rgba(255, 255, 255, 0.08);
  position: relative;
  transition: all 0.3s ease;
  width: 100%;
  min-height: 200px;
  display: flex;
  flex-direction: column;

  &.cohesive {
    border: 2px solid transparent;
    background: 
      linear-gradient(rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.05)),
      linear-gradient(135deg, #667eea, #764ba2, #f093fb, #4facfe) !important;
    background-origin: border-box;
    background-clip: padding-box, border-box;
    box-shadow: 
      0 4px 24px rgba(0, 0, 0, 0.4),
      0 0 30px rgba(102, 126, 234, 0.3),
      inset 0 0 20px rgba(102, 126, 234, 0.1) !important;
    animation: cohesiveGlow 3s ease-in-out infinite;
  }

  .cohesive-badge {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
    padding: 8px 16px;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(118, 75, 162, 0.2));
    border-radius: 20px;
    border: 1px solid rgba(102, 126, 234, 0.3);
    backdrop-filter: blur(10px);

    .badge-icon {
      font-size: 1.2rem;
      animation: pulse 2s ease-in-out infinite;
    }

    .badge-text {
      font-family: 'Poppins', sans-serif;
      font-size: 0.85rem;
      font-weight: 500;
      color: rgba(255, 255, 255, 0.9);
      text-transform: capitalize;
    }
  }

  mat-card-content {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;

    .placeholder {
      text-align: center;
      color: rgba(255, 255, 255, 0.5);

      .placeholder-icon {
        font-size: 3rem;
        display: block;
        margin-bottom: 16px;
        animation: float 3s ease-in-out infinite;
      }

      p {
        font-family: 'Roboto', sans-serif;
        font-size: 1rem;
        line-height: 1.6;
        margin: 0;
      }
    }

    .loading-state {
      text-align: center;
      color: rgba(255, 255, 255, 0.7);

      mat-spinner {
        margin: 0 auto 20px;
      }

      p {
        font-family: 'Roboto', sans-serif;
        font-size: 1rem;
        margin: 0;
      }
    }

    .tip-content {
      font-family: 'Roboto', sans-serif;
      font-size: clamp(1rem, 2.5vw, 1.1rem);
      line-height: 1.8;
      color: rgba(255, 255, 255, 0.9);
      margin: 0;
      animation: fadeIn 0.5s ease-in;
    }
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes cohesiveGlow {
  0%, 100% {
    box-shadow: 
      0 4px 24px rgba(0, 0, 0, 0.4),
      0 0 30px rgba(102, 126, 234, 0.3),
      inset 0 0 20px rgba(102, 126, 234, 0.1);
  }
  50% {
    box-shadow: 
      0 4px 24px rgba(0, 0, 0, 0.4),
      0 0 40px rgba(102, 126, 234, 0.5),
      inset 0 0 30px rgba(102, 126, 234, 0.15);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

.button-section {
  grid-area: button;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px 0 20px;
}

.generate-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  color: #fff !important;
  font-family: 'Poppins', sans-serif;
  font-size: 0.95rem !important;
  font-weight: 600 !important;
  padding: 14px 40px !important;
  border-radius: 8px !important;
  text-transform: uppercase;
  letter-spacing: 1.5px;
  box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  min-width: 240px;
  height: 52px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  position: relative;
  overflow: hidden;

  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  &:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(102, 126, 234, 0.5);

    &::before {
      left: 100%;
    }
  }

  &:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  mat-spinner {
    display: inline-block;
  }
}

@media (max-width: 768px) {
  .header {
    padding: 20px 30px;

    .logo-section {
      .logo {
        font-size: 1.5rem;
      }

      .tagline {
        font-size: 0.7rem;
      }
    }

    .nav-menu {
      display: none;
    }
  }

  .content {
    gap: 15px;
    padding: 15px;
    height: calc(100vh - 100px);
  }

  .typewriter-section {
    padding: 10px 0;
  }

  .generate-button {
    min-width: 200px;
    padding: 14px 36px !important;
    height: 50px;
  }

  .tip-card {
    padding: 20px;
    min-height: 180px;
  }
}

// Mobile hamburger button styles
.hamburger-button {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 30px;
  height: 30px;
  background: transparent;
  border: none;
  cursor: pointer;
  padding: 0;
  gap: 4px;
  
  .hamburger-line {
    width: 25px;
    height: 3px;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 2px;
    transition: all 0.3s ease;
    transform-origin: center;
  }
  
  &.active {
    .hamburger-line:nth-child(1) {
      transform: rotate(45deg) translate(6px, 6px);
    }
    
    .hamburger-line:nth-child(2) {
      opacity: 0;
    }
    
    .hamburger-line:nth-child(3) {
      transform: rotate(-45deg) translate(6px, -6px);
    }
  }
  
  &:hover .hamburger-line {
    background: rgba(255, 255, 255, 0.9);
  }
}

.mobile-nav {
    display: none !important; // Hidden by default on desktop
    position: fixed;
    top: 0;
    right: -100%;
    width: 280px;
    height: 100vh;
    background: rgba(13, 17, 23, 0.98);
    backdrop-filter: blur(20px);
    border-left: 1px solid rgba(102, 126, 234, 0.2);
    transition: right 0.3s ease;
    z-index: 1000;
    
    &.open {
      right: 0;
    }
    
    .mobile-nav-content {
      padding: 2rem 1.5rem;
      margin-top: 70px;
      
      .mobile-nav-item {
        display: block;
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        font-weight: 500;
        font-size: 1rem;
        padding: 1rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
        
        &:hover {
          color: rgba(255, 255, 255, 0.9);
          padding-left: 0.5rem;
        }
        
        &.active {
          color: rgb(102, 126, 234);
          border-left: 3px solid rgb(102, 126, 234);
          padding-left: 1rem;
          background: rgba(102, 126, 234, 0.05);
          margin-left: -1.5rem;
          padding-right: 1.5rem;
        }
      }
      
      .mobile-nav-divider {
        height: 1px;
        background: rgba(255, 255, 255, 0.1);
        margin: 2rem 0;
      }
      
      .mobile-user-info {
        margin-bottom: 1.5rem;
        
        .mobile-user-name {
          color: rgba(255, 255, 255, 0.9);
          font-weight: 600;
          font-size: 1.1rem;
          margin-bottom: 0.5rem;
        }
        
        .mobile-user-email {
          color: rgba(255, 255, 255, 0.5);
          font-size: 0.9rem;
        }
      }
      
      .mobile-logout-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        width: 100%;
        padding: 1rem 0;
        background: transparent;
        border: none;
        color: rgba(255, 99, 99, 0.8);
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        
        &:hover {
          color: rgba(255, 99, 99, 1);
          padding-left: 0.5rem;
        }
        
        mat-icon {
          font-size: 1.2rem;
          width: 1.2rem;
          height: 1.2rem;
        }
      }
    }
  }
}

@media (max-width: 480px) {
  .header {
    padding: 16px 20px;

    .logo-section {
      .logo {
        font-size: 1.3rem;
      }

      .tagline {
        font-size: 0.65rem;
      }
    }

    .desktop-nav {
      display: none;
    }

    .mobile-menu-container {
      display: flex;
    }

    .mobile-user {
      display: block;
    }
  }

  .content {
    gap: 10px;
    padding: 15px 10px;
    height: calc(100vh - 120px);
  }

  .typewriter-section {
    padding: 5px 0;
  }

  .generate-button {
    min-width: 100%;
    padding: 12px 24px !important;
    height: 48px;
    font-size: 0.95rem !important;
  }

  .tip-card {
    padding: 20px 15px;
    min-height: 160px;

    .placeholder .placeholder-icon {
      font-size: 2rem;
    }
  }
}
